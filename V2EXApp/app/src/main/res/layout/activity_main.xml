<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<com.example.administrator.v2exapp.mycomponents.MyToolbar
android:background="#8E8E8E"
android:id="@+id/toolbar"
android:layout_height="?attr/actionBarSize"
android:layout_width="match_parent" >
<!--自定义控件-->
//...
</com.example.administrator.v2exapp.mycomponents.MyToolbar>

<com.example.administrator.v2exapp.mycomponents.MyDrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:scrollbars="none"
                android:background="#8E8E8E"
                android:id="@+id/scrollView">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn1"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn2"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn3"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn4"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn5"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn6"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn7"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn8"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn9"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn10"
                        />
                    <RadioButton
                        style="@style/radioButton"
                        android:id="@+id/btn11"
                        />
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
            <ProgressBar
                android:background="@drawable/circlebackgroud"
                android:layout_gravity="center_horizontal"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:background="@drawable/circlebackgroud"
                android:layout_gravity="center_horizontal"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:id="@+id/rebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
    <!-- 需要呈现的内容 -->
        <LinearLayout
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">
        <TextView
            android:textColor="#FFFFFF"
            android:background="#8E8E8E"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="设置"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000" />
        <Button
            android:background="#FFFFFF"
            android:id="@+id/delete"
            android:textColor="#050505"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:text="删除本地文件存储"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />
        <Button
            android:background="#FFFFFF"
            android:id="@+id/sortpager"
            android:textColor="#050505"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:text="自定义分页显示"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />
            <TextView
                android:background="#FFFFFF"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
</com.example.administrator.v2exapp.mycomponents.MyDrawerLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frage"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="500dp"/>
</FrameLayout>